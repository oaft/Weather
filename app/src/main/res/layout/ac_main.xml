<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bcg_main"
    android:padding="@dimen/dp_16">

    <RelativeLayout
        android:id="@+id/rlDataSet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dp_16">

        <ImageView
            android:id="@+id/ivWeather"
            android:layout_width="123dp"
            android:layout_height="132dp"
            android:layout_margin="@dimen/dp_8" />

        <TextView
            android:id="@+id/tvTemperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ivWeather"
            android:layout_toEndOf="@+id/ivWeather"
            android:textColor="@color/colorWhite"
            android:textSize="55sp" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tvTemperature"
            android:layout_below="@+id/tvTemperature"
            android:layout_toEndOf="@+id/ivWeather"
            android:padding="@dimen/dp_4"
            android:textColor="@color/colorWhite"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tvHumidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/ivWeather"
            android:layout_below="@+id/ivWeather"
            android:paddingBottom="@dimen/dp_4"
            android:paddingLeft="@dimen/dp_8"
            android:paddingTop="@dimen/dp_8"
            android:textColor="@color/colorWhite"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tvWind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/ivWeather"
            android:layout_below="@+id/tvHumidity"
            android:paddingBottom="@dimen/dp_8"
            android:paddingLeft="@dimen/dp_8"
            android:paddingTop="@dimen/dp_4"
            android:textColor="@color/colorWhite"
            android:textSize="24sp" />
    </RelativeLayout>

</LinearLayout>
